{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Parallel coordinates plot showing 7 dimensions of automobile statistics.",
  "background": "#F7EDE2",
  "width": 1500,
  "height": 500,
  "config": {
    "axisY": {
      "titleX": -2,
      "titleY": 410,
      "titleAngle": 0,
      "titleAlign": "right",
      "titleBaseline": "top"
    }
  },
  "data": [
    {
      "name": "happiness_report",
      "url": "data/world-happiness-report-2021.csv",
      "format": {
        "type": "csv",
        "parse": {
          "Ladder score": "number",
          "Logged GDP per capita": "number",
          "Social support": "number",
          "Healthy life expectancy": "number",
          "Freedom to make life choices": "number",
          "Generosity": "number",
          "Perceptions of corruption": "number"
        }
      }
    },
    {
      "name": "fields",
      "values": [
        "Ladder score",
        "Logged GDP per capita",
        "Social support",
        "Healthy life expectancy",
        "Freedom to make life choices",
        "Generosity",
        "Perceptions of corruption"
      ]
    }
  ],
  "scales": [
    {
      "name": "Happines Score",
      "type": "point",
      "range": "width",
      "round": true,
      "domain": {
        "data": "fields",
        "field": "Ladder score"
      }
    },
    {
      "name": "Logged GDP per capita",
      "type": "linear",
      "range": "height",
      "zero": false,
      "nice": true,
      "domain": {
        "data": "happiness_report",
        "field": "Logged GDP per capita"
      }
    },
    {
      "name": "Social support",
      "type": "linear",
      "range": "height",
      "zero": false,
      "nice": true,
      "domain": {
        "data": "happiness_report",
        "field": "Social support"
      }
    },
    {
      "name": "Healthy life expectancy",
      "type": "linear",
      "range": "height",
      "zero": false,
      "nice": true,
      "domain": {
        "data": "happiness_report",
        "field": "Healthy life expectancy"
      }
    },
    {
      "name": "Freedom to make life choices",
      "type": "linear",
      "range": "height",
      "zero": false,
      "nice": true,
      "domain": {
        "data": "happiness_report",
        "field": "Freedom to make life choices"
      }
    },
    {
      "name": "Generosity",
      "type": "linear",
      "range": "height",
      "zero": false,
      "nice": true,
      "domain": {
        "data": "happiness_report",
        "field": "Generosity"
      }
    },
    {
      "name": "Perceptions of corruption",
      "type": "linear",
      "range": "height",
      "zero": false,
      "nice": true,
      "domain": {
        "data": "happiness_report",
        "field": "Perceptions of corruption"
      }
    }
  ],
  "axes": [
    {
      "orient": "left",
      "zindex": 1,
      "scale": "Logged GDP per capita",
      "title": "Logged GDP per capita",
      "offset": {
        "scale": "ord",
        "value": "Logged GDP per capita",
        "mult": -1
      }
    },
    {
      "orient": "left",
      "zindex": 1,
      "scale": "Social support",
      "title": "Social support",
      "offset": {
        "scale": "ord",
        "value": "Social support",
        "mult": -1
      }
    },
    {
      "orient": "left",
      "zindex": 1,
      "scale": "Healthy life expectancy",
      "title": "Healthy life expectancy",
      "offset": {
        "scale": "ord",
        "value": "Healthy life expectancy",
        "mult": -1
      }
    },
    {
      "orient": "left",
      "zindex": 1,
      "scale": "Freedom to make life choices",
      "title": "Freedom to make life choices",
      "offset": {
        "scale": "ord",
        "value": "Freedom to make life choices",
        "mult": -1
      }
    },
    {
      "orient": "left",
      "zindex": 1,
      "scale": "Generosity",
      "title": "Generosity",
      "offset": {
        "scale": "ord",
        "value": "Generosity",
        "mult": -1
      }
    },
    {
      "orient": "left",
      "zindex": 1,
      "scale": "Perceptions of corruption",
      "title": "Perceptions of corruption",
      "offset": {
        "scale": "ord",
        "value": "Perceptions of corruption",
        "mult": -1
      }
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "data": "happiness_report"
      },
      "marks": [
        {
          "type": "line",
          "from": {
            "data": "fields"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "ord",
                "field": "data"
              },
              "y": {
                "scale": {
                  "datum": "data"
                },
                "field": {
                  "parent": {
                    "datum": "data"
                  }
                }
              },
              "stroke": {
                "value": "steelblue"
              },
              "strokeWidth": {
                "value": 1.01
              },
              "strokeOpacity": {
                "value": 0.3
              }
            }
          }
        }
      ]
    }
  ]
}